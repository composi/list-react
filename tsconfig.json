{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "jsxFactory": "React.createElement",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/index.js",
    "node_modules/@composi/runtime/src/*.js",
    "node_modules/@composi/idb/src/*.js",
    "node_modules/@composi/clone/src/*.js"
  ]
}
